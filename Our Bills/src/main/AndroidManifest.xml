<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fff.gjk.ourbills" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fff.gjk.ourbills.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fff.gjk.ourbills.activity.GroupActivity"
            android:label="@string/title_activity_group"
            android:parentActivityName="com.fff.gjk.ourbills.activity.MainActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fff.gjk.ourbills.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.fff.gjk.ourbills.activity.FriendActivity"
            android:label="@string/title_activity_friend"
            android:parentActivityName="com.fff.gjk.ourbills.activity.MainActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fff.gjk.ourbills.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.fff.gjk.ourbills.activity.AddBillActivity"
            android:label="@string/title_activity_add__bill"
            android:parentActivityName="com.fff.gjk.ourbills.activity.MainActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fff.gjk.ourbills.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.fff.gjk.ourbills.activity.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.fff.gjk.ourbills.activity.AddFriendActivity"
            android:label="@string/title_activity_add__friend"
            android:parentActivityName="com.fff.gjk.ourbills.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fff.gjk.ourbills.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.fff.gjk.ourbills.activity.EditFriendActivity"
            android:label="@string/title_activity_edit_friend" >
        </activity>
        <activity
            android:name="com.fff.gjk.ourbills.activity.AddGroupActivity"
            android:label="@string/title_activity_add_group"
            android:parentActivityName="com.fff.gjk.ourbills.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fff.gjk.ourbills.activity.MainActivity" />
        </activity>
    </application>

</manifest>
